@using CougarTown.Models.BaseModels
@model User
@{
    ViewBag.Title = "PublicProfile";
}

<div class="col-lg-12">
    <a class="btn btn-link" href="/Home/HotOrNot">Back</a>
</div>

<div class="col-lg-12">
    <div class="row">
        <h2>@Model.DisplayName</h2>
        <div class="col-lg-6">
            <img src="~/Content/Images/Users/@Model.ProfileImage" class="img-rounded" />
        </div>
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <td>
                        Display Name:
                    </td>
                    <td>
                        @Model.DisplayName
                    </td>
                </tr>
                <tr>
                    <td>
                        Age:
                    </td>
                    <td>
                        @Model.Age
                    </td>
                </tr>
                <tr>
                    <td>
                        Gender:
                    </td>
                    <td>
                        @Model.Gender
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="/Home/LikeUser/?id=@Model.ID&like=true&returnURL=@Request.RawUrl"><i class="fa fa-thumbs-o-up" style="font-size:50px;"></i></a>
                        <a href="/Home/LikeUser/?id=@Model.ID&like=false&returnURL=@Request.RawUrl"><i class="fa fa-thumbs-o-down" style="font-size:50px;"></i></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

