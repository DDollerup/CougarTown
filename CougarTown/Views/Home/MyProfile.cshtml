@using CougarTown.Models.BaseModels
@model User

@{
    ViewBag.Title = "MyProfile";
}

<h2>MyProfile</h2>

<div class="col-lg-12">
    <div class="row">
        <h2>@Model.DisplayName</h2>
        <div class="col-lg-6">
            <img src="~/Content/Images/Users/@Model.ProfileImage" class="img-rounded" />
        </div>
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <td>
                        Display Name:
                    </td>
                    <td>
                        @Model.DisplayName
                    </td>
                </tr>
                <tr>
                    <td>
                        Name:
                    </td>
                    <td>
                        @Model.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        Age:
                    </td>
                    <td>
                        @Model.Age
                    </td>
                </tr>
                <tr>
                    <td>
                        Gender:
                    </td>
                    <td>
                        @Model.Gender
                    </td>
                </tr>
                <tr>
                    <td>
                        Email:
                    </td>
                    <td>
                        @Model.Email
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="/Home/EditUser">Edit My Profile</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div style="clear:both;">

</div>

<h3>Profiles I like <3 </h3>
<hr />

<div class="col-lg-12">
    <div class="row">
        @foreach (User usersLiked in (ViewBag.ProfilesUserLiked as List<User>))
        {
            <a href="/Home/PublicProfile/@usersLiked.ID">
                <table class="table">
                    <tr>
                        <td>
                            <img src="~/Content/Images/Users/@usersLiked.ProfileImage" class="img-responsive" style="height:100px" />
                        </td>
                        <td>
                            @usersLiked.DisplayName
                        </td>
                    </tr>
                </table>
            </a>
        }
    </div>
</div>