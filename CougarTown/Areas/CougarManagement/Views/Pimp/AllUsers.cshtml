@using CougarTown.Models.BaseModels
@model List<User>

@{
    ViewBag.Title = "AllUsers";
}
<div class="col-lg-12">
    <h2>AllUsers</h2>
    <div class="row">
        <table class="table">
            @foreach (User user in Model)
            {
                <tr>
                    <td>
                        <strong>Name:</strong> @user.DisplayName
                    </td>
                    <td>
                        <strong>Gender:</strong> @user.Gender
                    </td>
                    <td>
                        <strong>Age:</strong> @user.Age
                    </td>
                    <td>
                        <a href="/CougarManagement/Pimp/DeleteUser/@user.ID"><strong>Delete</strong></a>
                    </td>
                    <td>
                        <a href="/CougarManagement/Pimp/UpdateUser/@user.ID"><strong>Edit</strong></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


